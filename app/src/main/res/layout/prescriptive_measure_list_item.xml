<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prescriptive_measure_item_container"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:id="@+id/measure_name"
            android:hint="Interior LED low bay fixture replacing 150â€“300W fixture"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/unit_measure_rebate"
            android:hint="Per Fixture"
            android:layout_marginRight="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/unit_label"
            android:hint="$40"/>

    </LinearLayout>


</RelativeLayout>